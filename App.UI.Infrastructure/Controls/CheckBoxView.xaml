<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.UI.Infrastructure.Controls.CheckBoxView">

    <HorizontalStackLayout HorizontalOptions="Start" MaximumHeightRequest="48">

        <CheckBox x:Name="Checkbox"  Color="{DynamicResource PrimaryColor}" Margin="0,0,0,0" VerticalOptions="Center"/>
        <Label x:Name="CheckboLable" VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="LabelClicked"/>
            </Label.GestureRecognizers>
        </Label>
    </HorizontalStackLayout>

</ContentView>
